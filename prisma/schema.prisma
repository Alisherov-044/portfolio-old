// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Specification {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  color       String
}

model SkillSet {
  id          Int     @id @default(autoincrement())
  icon        String
  title       String
  description String
  link        String?
}

model SocialNetwork {
  id   Int    @id @default(autoincrement())
  icon String
  link String
}

model Project {
  id          Int    @id @default(autoincrement())
  image       String
  title       String
  description String
  link        String
}
